<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <ImageView
        android:id="@+id/kaifu_one_list_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/normal_tese1"/>
    <TextView
        android:id="@+id/kaifu_one_list_title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="挂机吧武侠"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_alignTop="@id/kaifu_one_list_img"
        android:layout_toRightOf="@id/kaifu_one_list_img"/>
    <ImageView
        android:id="@+id/kaifu_one_clock_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/clock"
        android:layout_below="@+id/kaifu_one_list_title_txt"
        android:layout_toRightOf="@+id/kaifu_one_list_img"
        android:layout_toEndOf="@+id/kaifu_one_list_img"/>
    <TextView
        android:id="@+id/kaifu_one_list_time_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10-23 10:34"
        android:textColor="#ff0000"
        android:layout_below="@+id/kaifu_one_list_title_txt"
        android:layout_toRightOf="@+id/kaifu_one_clock_iv"
        android:layout_toEndOf="@+id/kaifu_one_clock_iv"/>
    <TextView
        android:id="@+id/kaifu_one_list_operate_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="挂机吧武侠"
        android:layout_alignBottom="@id/kaifu_one_list_img"
        android:layout_toRightOf="@id/kaifu_one_list_img"/>
    <TextView
        android:id="@+id/kaifu_one_list_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1024"
        android:layout_marginLeft="14dp"
        android:layout_alignBaseline="@+id/kaifu_one_list_time_txt"
        android:layout_alignBottom="@+id/kaifu_one_list_time_txt"
        android:layout_toRightOf="@+id/kaifu_one_list_time_txt"
        android:layout_toEndOf="@+id/kaifu_one_list_time_txt"/>
    <Button
        android:id="@+id/kaifu_one_list_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看"
        android:background="#ff0000"
        android:textColor="#ffffff"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"/>

</RelativeLayout>