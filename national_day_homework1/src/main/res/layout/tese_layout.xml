<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <ImageView
        android:id="@+id/tese_one_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/tese_image"/>
    <TextView
        android:id="@+id/tese_one_name_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="月满人团圆"
        android:background="@color/bantouming"
        android:layout_marginTop="160dp"
        android:textColor="#ffffff"/>
    <ImageView
        android:id="@+id/tese_one_clock_iv"
        android:layout_width="15dp"
        android:layout_height="20dp"
        android:src="@drawable/clock1"
        android:layout_alignBottom="@+id/tese_one_time_txt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <TextView
        android:id="@+id/tese_one_time_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2016-3-4"
        android:background="@color/bantouming"
        android:textColor="#ffffff"
        android:layout_below="@id/tese_one_name_txt"
        android:layout_toRightOf="@id/tese_one_clock_iv"/>

</RelativeLayout>