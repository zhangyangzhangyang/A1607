<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <ImageView
        android:id="@+id/gift_main_view_iv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/normal_tese1"/>
    <TextView
        android:id="@+id/gift_main_view_title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xxxxxx"
        android:textSize="25sp"
        android:layout_alignTop="@id/gift_main_view_iv"
        android:layout_toRightOf="@id/gift_main_view_iv"/>
    <TextView
        android:id="@+id/gift_main_view_subtitle_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xxxxxxxx"
        android:textSize="15sp"
        android:layout_below="@id/gift_main_view_title_txt"
        android:layout_toRightOf="@id/gift_main_view_iv"
        android:layout_toEndOf="@id/gift_main_view_iv"/>
    <TextView
        android:id="@+id/gift_main_view_time_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gift_main_item_desc_model"
        android:textSize="15sp"
        android:layout_alignBottom="@id/gift_main_view_iv"
        android:layout_toRightOf="@id/gift_main_view_iv"
        android:layout_toEndOf="@id/gift_main_view_iv"/>
    <Button
        android:id="@+id/gift_main_view_button_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="立即领取"
        android:textColor="#ffffff"
        android:background="#f00000"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"/>
</RelativeLayout>