<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/kaifu_one_list_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/m_libao"/>
    <TextView
        android:id="@+id/kaifu_one_list_title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="挂机吧武侠"
        android:textSize="15sp"
        android:layout_alignTop="@id/kaifu_one_list_img"
        android:layout_toRightOf="@id/kaifu_one_list_img"/>
    <TextView
        android:id="@+id/kaifu_one_list_time_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10-23 10:34"
        android:layout_alignLeft="@id/kaifu_one_list_title_txt"
        android:layout_below="@id/kaifu_one_list_title_txt"/>
    <TextView
        android:id="@+id/kaifu_one_list_operate_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="挂机吧武侠"
        android:textColor="#ff0000"
        android:layout_alignBottom="@id/kaifu_one_list_img"
        android:layout_toRightOf="@id/kaifu_one_list_img"/>
    <Button
        android:id="@+id/kaifu_one_list_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看"
        android:background="#ff0000"
        android:textColor="#ffffff"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"/>
</RelativeLayout>