<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/gift_bag_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/def_head"/>
    <TextView
        android:id="@+id/gift_bag_title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="游戏名称"
        android:textSize="20sp"
        android:layout_toRightOf="@id/gift_bag_img"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@id/gift_bag_img"/>

    <TextView
        android:id="@+id/gift_bag_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="游戏礼貌名称"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@id/gift_bag_title_txt"
        android:layout_below="@id/gift_bag_title_txt"/>

    <TextView
        android:id="@+id/gift_bag_time_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="剩余：7  时间：2016-4-23"
        android:layout_alignBottom="@id/gift_bag_img"
        android:layout_alignLeft="@id/gift_bag_title_txt"/>

    <Button
        android:id="@+id/gift_bag_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ff0000"
        android:text="立即领取"
        android:textColor="#ffffff"

        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"/>

</RelativeLayout>