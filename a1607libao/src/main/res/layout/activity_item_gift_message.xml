<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cxk.OneFragment.GiftMessageActivity">

<RelativeLayout
    android:id="@+id/activity_gift_message_relative"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="#ff0000">
    <TextView
        android:id="@+id/activity_gift_text_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bar_back"
        />
    <TextView
        android:id="@+id/activity_gift_text_share"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:background="@drawable/share"
        android:layout_alignParentRight="true"/>
    </RelativeLayout>
   <RelativeLayout
       android:id="@+id/activity_gift_message_relative2"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@id/activity_gift_message_relative"
       >
       <ImageView
           android:id="@+id/activity_gift_image_view"
           android:layout_width="match_parent"
           android:layout_height="120dp"
           android:background="@drawable/lb_bg"
           />
       <ImageView
           android:id="@+id/activity_gift_image_view2"
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:background="#fff000"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="20dp" />
       <RelativeLayout
           android:id="@+id/activity_gift_message_relative3"
           android:layout_width="match_parent"
           android:layout_height="30dp"
           android:background="#40000000"
           android:layout_alignBottom="@+id/activity_gift_image_view"
           android:layout_alignParentLeft="true"
           android:layout_alignParentStart="true">
           <TextView
               android:id="@+id/activity_gift_text_time"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="时间"
               android:layout_alignParentBottom="true"
               android:layout_alignParentLeft="true"
               android:layout_alignParentStart="true" />
           <TextView
               android:id="@+id/activity_gift_text_left"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="剩余"
               android:layout_alignParentRight="true"
               android:layout_alignParentEnd="true"
               android:layout_alignTop="@+id/activity_gift_text_time" />
       </RelativeLayout>
    <TextView
        android:id="@+id/activity_gift_text_jieshi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="礼包说明"
        android:layout_below="@id/activity_gift_message_relative3"/>
    <TextView
        android:id="@+id/activity_gift_text_gettype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_gift_text_jieshi"
        android:text="兑换方式"/>
   <RelativeLayout
       android:id="@+id/activity_gift_message_relative4"
       android:layout_width="match_parent"
       android:layout_height="40dp"
       android:background="#ff0000"
       android:layout_alignParentBottom="true">
       <Button
           android:id="@+id/activity_gift_btnget"
           android:layout_width="wrap_content"
           android:layout_height="30dp"
           android:text="立即领取"
           android:textSize="10dp"
           android:textColor="#ffffff"
           android:layout_centerVertical="true"
           android:layout_centerHorizontal="true" />
       <Button
           android:id="@+id/activity_gift_btn"
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:text="礼包图片"
           android:textSize="10dp"
           android:background="@drawable/my_gift_green"
           android:textColor="#ffffff"
           android:layout_alignParentRight="true"
           />
   </RelativeLayout>
   </RelativeLayout>
</RelativeLayout>