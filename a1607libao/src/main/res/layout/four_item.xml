<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/item4_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<ImageView
    android:id="@+id/item4_image_view"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:scaleType="centerCrop"/>
    <RelativeLayout
        android:id="@+id/item4_relative_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#20000000"
        android:layout_alignBottom="@id/item4_image_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/item4_text_view_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="名字"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:id="@+id/item4_text_view_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/g_biao"
            android:text="时间"
            android:layout_below="@id/item4_text_view_name"
            android:layout_marginLeft="40dp"
             />
    </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#FFFFFF"
        android:layout_below="@id/item4_relative_layout"/>
</RelativeLayout>