<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/three_fragment_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ff0000"
        >
        <TextView
            android:id="@+id/three_fragment_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/title_bar_menu"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/three_fragment_text_view2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="热门游戏"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <TextView
        android:id="@+id/three_fragment_jingpin"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="精品推荐："
        android:background="#D1D1D1"
        android:layout_below="@id/three_fragment_linear_layout"
       />
    <ListView
        android:id="@+id/three_fragment_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/three_fragment_jingpin">
    </ListView>
    <TextView
        android:id="@+id/three_fragment_remen"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="热门推荐："
        android:background="#D1D1D1"
        android:layout_below="@id/three_fragment_list_view"
       />
    <GridView
        android:numColumns="3"
        android:id="@+id/three_fragment_gride_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/three_fragment_remen">
    </GridView>
</RelativeLayout>