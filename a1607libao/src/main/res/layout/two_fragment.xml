<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/two_fragment_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ff0000">
        <TextView
            android:id="@+id/two_fragment_title_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/title_bar_menu"
            android:layout_alignTop="@+id/two_fragment_title_textview2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@id/two_fragment_title_textview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开服"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/two_fragment_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/two_fragment_relative_layout"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/two_fragment_view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/two_fragment_tab_layout"/>
    <FrameLayout
        android:id="@+id/two_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/two_fragment_view_pager"/>
</RelativeLayout>