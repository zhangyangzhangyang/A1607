<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/one_fragment_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ff0000"
        >
        <TextView
            android:id="@+id/one_fragment_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/title_bar_menu"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    <TextView
    android:id="@+id/one_fragment_text_view2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
     android:textSize="20sp"
    android:text="礼包精灵"
        android:textColor="#ffffff"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
        <TextView
            android:id="@+id/one_fragment_text_view3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="搜索"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

<ListView
    android:id="@+id/one_fragment_list_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/one_fragment_relative_layout"
   >
</ListView>

</RelativeLayout>