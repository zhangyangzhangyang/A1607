<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/game_new_hot_details_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"/>
    <TextView
        android:id="@+id/game_new_hot_details_title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="三国群英传"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@id/game_new_hot_details_image"
        android:layout_toRightOf="@id/game_new_hot_details_image"/>
    <TextView
        android:id="@+id/game_new_hot_details_desc_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="三国群英传VVVVVVVVVVVVVVVV"
        android:textSize="20sp"
        android:maxLines="1"
        android:layout_alignLeft="@id/game_new_hot_details_title_txt"
        android:layout_below="@id/game_new_hot_details_title_txt"/>
    <TextView
        android:id="@+id/game_new_hot_details_size_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="134M"
        android:layout_alignBottom="@id/game_new_hot_details_image"
        android:layout_alignLeft="@id/game_new_hot_details_title_txt"/>
    <TextView
        android:id="@+id/game_new_hot_details_gift_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1中礼包"
        android:drawableLeft="@drawable/gift"
        android:layout_alignBottom="@id/game_new_hot_details_image"
        android:layout_toRightOf="@id/game_new_hot_details_size_txt"/>
    <TextView
        android:id="@+id/game_new_hot_details_peopleno_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="人气：42332"
        android:textColor="#ff0000"
        android:layout_alignBottom="@id/game_new_hot_details_image"
        android:layout_toRightOf="@id/game_new_hot_details_gift_txt"/>
</RelativeLayout>