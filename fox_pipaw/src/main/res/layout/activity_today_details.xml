<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".game.listdetails.TodayDetailsActivity">
<RelativeLayout
    android:id="@+id/test1"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#009cff">

    <Button
        android:id="@+id/activity_today_details_back_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:background="@drawable/abc_ic_ab_back_mtrl"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="二狐游戏"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/activity_today_details_back_btn"/>
    <Button
        android:id="@+id/activity_today_details_share_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/abc_ic_menu_moreoverflow_1"
        android:layout_alignParentRight="true"/>
    <Button
        android:id="@+id/activity_today_details_download_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/download_tran_ic"
        android:layout_toLeftOf="@+id/activity_today_details_share_btn"/>
    <Button
        android:id="@+id/activity_today_details_search_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/abc_ic_search_api1"
        android:layout_toLeftOf="@id/activity_today_details_download_btn"/>
</RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/test1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:background="#009cff"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <ImageView
                android:id="@+id/activity_today_details_game_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/ic_launcher"
                android:layout_margin="10dp"/>
            <TextView
                android:id="@+id/activity_today_details_gamename_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="不良人2"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:layout_toRightOf="@id/activity_today_details_game_image"
                android:layout_alignTop="@id/activity_today_details_game_image"/>
            <TextView
                android:id="@+id/activity_today_details_gametype_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="leixingewffsad"
                android:textColor="#ffffff"
                android:layout_alignLeft="@id/activity_today_details_gamename_txt"
                android:layout_below="@id/activity_today_details_gamename_txt"/>
            <TextView
                android:id="@+id/activity_today_details_gamesize_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="大小："
                android:textColor="#ffffff"
                android:layout_alignLeft="@id/activity_today_details_gamename_txt"
                android:layout_alignBottom="@id/activity_today_details_game_image"/>
            <TextView
                android:id="@+id/activity_today_details_gamepeopleno_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7823433人在玩："
                android:textColor="#ffff00"
                android:layout_toRightOf="@id/activity_today_details_gamesize_txt"
                android:layout_alignBottom="@id/activity_today_details_game_image"/>
        </RelativeLayout>
        <HorizontalScrollView
            android:id="@+id/activity_today_details_hsv"
            android:layout_width="match_parent"
            android:layout_height="250dp">
            <LinearLayout
                android:id="@+id/activity_today_details_linearlayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"/>
        </HorizontalScrollView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="游戏简介"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/activity_today_details_desc_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="游戏介绍内容但是法律纠纷"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/activity_today_details_newgift_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="最新礼包"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_margin="10dp"/>
        <com.example.fox_pipaw.CustomListView
            android:id="@+id/activity_today_details_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="大家还下载"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_margin="10dp"/>
        <com.example.fox_pipaw.CustomGridView
            android:id="@+id/activity_today_details_gridview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    </ScrollView>
    <Button
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="#009cff"
        android:text="立即下载"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"/>
</RelativeLayout>
