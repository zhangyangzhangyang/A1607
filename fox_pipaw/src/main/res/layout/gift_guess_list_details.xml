<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
<ImageView
    android:id="@+id/gift_guess_list_details_image"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:layout_margin="10dp"
    android:src="@mipmap/ic_launcher"/>
    <TextView
        android:id="@+id/gift_guess_list_details_title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="不良人2"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_alignTop="@id/gift_guess_list_details_image"
        android:layout_toRightOf="@id/gift_guess_list_details_image"/>
    <TextView
        android:id="@+id/gift_guess_list_details_giftbag_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="礼包：一种"
        android:layout_alignLeft="@id/gift_guess_list_details_title_txt"
        android:layout_below="@id/gift_guess_list_details_title_txt"/>
    <TextView
        android:id="@+id/gift_guess_list_details_people_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="人气:"
        android:layout_alignLeft="@id/gift_guess_list_details_title_txt"
        android:layout_alignBottom="@id/gift_guess_list_details_image"/>
    <TextView
        android:id="@+id/gift_guess_list_details_peopleno_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="32344"
        android:textColor="#ff0000"
        android:layout_toRightOf="@id/gift_guess_list_details_people_txt"
        android:layout_alignBottom="@id/gift_guess_list_details_image"/>
    <Button
        android:id="@+id/gift_guess_list_details_btn"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="马上抢"
        android:textColor="#00a8ee"
        android:layout_marginTop="25dp"
        android:background="@drawable/hd_list_item_btn"
        android:layout_alignParentRight="true"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#969696"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>