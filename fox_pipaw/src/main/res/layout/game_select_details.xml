<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
<ImageView
    android:id="@+id/game_select_detials_image"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:src="@drawable/game_hot_new"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/game_select_detials_title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="大话西游"
        android:textColor="#000000"
        android:layout_alignTop="@id/game_select_detials_image"
        android:layout_toRightOf="@id/game_select_detials_image"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/game_select_detials_type_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="策略"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@id/game_select_detials_title_txt"
        android:layout_below="@id/game_select_detials_title_txt"/>
    <TextView
        android:id="@+id/game_select_details_people_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="人气："
        android:layout_alignBottom="@id/game_select_detials_image"
        android:layout_alignLeft="@id/game_select_detials_title_txt"/>
    <TextView
        android:id="@+id/game_select_details_peopleno_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="99877"
        android:textColor="#ff0000"
        android:layout_alignBottom="@id/game_select_details_people_txt"
        android:layout_toRightOf="@id/game_select_details_people_txt"/>
    <Button
        android:id="@+id/game_select_details_btn"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/game_select_detials_image"
        android:text="下载"
        android:textColor="#00a8ee"
        android:background="@drawable/hd_list_item_btn"
        android:layout_alignLeft="@id/game_select_detials_title_txt"/>
</RelativeLayout>