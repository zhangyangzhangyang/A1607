<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="250dp">


    <ImageView
        android:id="@+id/game_header_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:background="@mipmap/ic_launcher"/>
    <Button
        android:id="@+id/game_header_download_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/download_tran_ic"
        android:layout_alignParentRight="true"/>
    <Button
        android:id="@+id/game_header_search_btn"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:text="请输入要搜索的内容                                 "
        android:background="#ffffff"
        android:layout_marginBottom="10dp"
        android:drawableLeft="@drawable/search_all"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="40dp"/>

</RelativeLayout>